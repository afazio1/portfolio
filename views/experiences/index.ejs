<% layout("layouts/boilerplate") %>
<main class="container">

    <section>
        <header class="row mt-5 heading pb-4">
            <h1 class="text-center experience-heading">Experience</h1>
        </header>
        <div class="row justify-content-center align-items-center">
            <% if(currentUser) { %>
            <div class="col-lg-8 mt-3 text-center">
                <a href="experience/new" class="btn btn-success">New Experience</a>
            </div>
            <% } %>
            <div class="col-lg-8 mt-3">
                <div class="timeline">
                    <% for (let experience of experiences) { %>
                    <div class="card item text-center my-4">
                        <div class="card-body">
                            <h5 class="card-title text-white"><%= experience.title %>
                                @ <a href="<%= experience.link %>" target="_blank"
                                    rel="noopener noreferrer"><span><%= experience.employer %></span></a>
                            </h5>
                            <p class="card-text"><%= experience.stack.join(", ") %></p>
                        </div>
                        <div class="card-footer text-white">
                            <%= experience.startDate.toLocaleString("en-US", { month: "short", year: "numeric"}) %>
                            -
                            <% if (experience.endDate !== undefined && experience.endDate !== null) { %>
                            <%= experience.endDate.toLocaleString("en-US", { month: "short", year: "numeric"})%>
                            <% } else { %>
                            <span>Current</span>
                            <% } %>
                            <% if(currentUser) { %>
                            <hr>
                            <div>
                                <a href="experience/<%= experience._id %>/edit" class="btn btn-info">Edit</a>
                                <form class="d-inline" action="experience/<%= experience._id %>?_method=DELETE"
                                    method="POST">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                            <% } %>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </section>
</main>