<% layout("layouts/boilerplate") %>
<main class="container">

    <section>
        <header class="row mt-5 heading pb-4">
            <h1 class="text-center">Edit <%= proj.name %></h1>
        </header>
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-8 mt-3">
                <form class="my-3" action="/projects/<%= proj._id %>?_method=PUT" method="POST" autocomplete="off">
                    <div class="row justify-content-center align-items-center">
                        <div class="form-group col-lg-6">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" name="name" value="<%= proj.name %>"
                                required>
                        </div>
                    </div>
                    <div class="row justify-content-center align-items-center">
                        <div class="form-group col-lg-6">
                            <label for="shortDescription">Short Description</label>
                            <textarea class="form-control" id="shortDescription" rows="2" name="shortDescription"
                                required><%= proj.shortDescription %></textarea>
                        </div>
                    </div>
                    <div class="row justify-content-center align-items-center">
                        <div class="form-group col-lg-6">
                            <label for="longDescription">Long Description</label>
                            <textarea class="form-control" id="longDescription" rows="3" name="longDescription"
                                required><%= proj.longDescription %></textarea>
                        </div>
                    </div>
                    <div class="row justify-content-center align-items-center">
                        <div class="form-group col-lg-6">
                            <label for="stack">Stack</label>
                            <input type="text" class="form-control" id="stack" name="stack" value="<%= proj.stack %>"
                                required>
                        </div>
                    </div>
                    <div class="row justify-content-center align-items-center">
                        <div class="form-group col-lg-6">
                            <label for="link">Link</label>
                            <input type="text" class="form-control" id="link" name="link" value="<%= proj.link %>"
                                required>
                        </div>
                    </div>
                    <div class="row justify-content-center align-items-center">
                        <div class="form-group col-lg-6">
                            <label for="image">Image</label>
                            <input type="text" class="form-control" id="image" name="image" value="<%= proj.image %>"
                                required>
                        </div>
                    </div>
                    <div class="row my-3 align-items-center">
                        <div class="form-group col-lg-2 offset-3">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>