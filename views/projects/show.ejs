<% layout("layouts/boilerplate") %>
<main class="container">
    <section>
        <header class="row mt-5 heading pb-4">
            <h1 class="text-center"><%= proj.name %></h1>
        </header>
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-8 mt-5">
                <img src="<%= proj.image %>" class="img-fluid mx-auto d-block">
            </div>
        </div>
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-8 mt-5">
                <h3 class="text-center">Tech Stack: {<span><%= proj.stack.join(", ") %></span>}</h3>
            </div>
        </div>
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-8 mt-5">
                <p class="item p-3"><%= proj.longDescription %></p>
            </div>
        </div>
    </section>
</main>